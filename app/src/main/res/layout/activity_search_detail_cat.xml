<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.altygtsoft.libraryautomation.SearchDetailCat">

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitap Adı"
        android:textSize="25sp"
        android:textColor="#292e2e"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/kitapAdi"
        android:inputType="text"
        android:textColor="#292e2e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yazar Adı"
        android:textSize="25sp"
        android:textColor="#292e2e"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/yazarAdi"
        android:inputType="text"
        android:textColor="#292e2e"/>


    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yayın Evi"
        android:textSize="25sp"

        android:textColor="#292e2e"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/yayinEvi"
        android:inputType="text"
        android:textColor="#292e2e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basım Yılı"
        android:textSize="25sp"
        android:textColor="#292e2e"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/basimYili"
        android:inputType="date"
        android:textColor="#292e2e"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detaylı Ara"
        android:id="@+id/detayliAraBtn"
        />



</LinearLayout>
